<% unless journal.blank? || journal.frozen? %>
  $('#change-<%= journal.id %> span.question-line').remove();

  <% journal.reload
    if journal.question && journal.question.opened? %>

    $('#change-<%= journal.id %>').addClass('question');
    $('#change-<%= journal.id %> h4').after('<%= escape_javascript render partial: "question_plugin/question", locals: { question: journal.question } %>');

  <% elsif journal.question.nil? %>
    $('#change-<%= journal.id %>').removeClass('question');
  <% end %>
<% end %>
